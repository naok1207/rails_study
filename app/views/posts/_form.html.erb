<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field" style="display: flex;">
    <%= form.label :content %>
    <%= form.text_area :content, style: "width: 600px; height: 800px;", id: "editor", data: {preview:"#preview"}%>
    <div id="preview" class="markdown-body" style="margin: 30px; background: #eeeeee; width: 600px; height: 800px;"></div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
